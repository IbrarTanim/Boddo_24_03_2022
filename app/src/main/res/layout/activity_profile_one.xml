<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5DAA1">

    <RelativeLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profile_image_container_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/profile_image_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/hundrad" />

                        <LinearLayout
                            android:id="@+id/llBck"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/thirty"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivBackProfileOneActivity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="@dimen/ten"
                                android:paddingRight="@dimen/ten"
                                android:paddingBottom="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cross_icon_01_08_2021" />
                        </LinearLayout>


                        <com.rd.PageIndicatorView
                            android:id="@+id/image_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/thirty"
                            app:piv_animationType="drop"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@color/app_color"
                            app:piv_unselectedColor="@color/white"
                            app:piv_viewPager="@id/profile_image_view_pager" />


                        <LinearLayout
                            android:id="@+id/llSadia"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginTop="@dimen/seventy"
                            android:background="@drawable/bg_rounded_black_transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvUserNameProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/twenty_five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginRight="@dimen/twenty_five"
                                android:layout_marginBottom="@dimen/five"
                                android:gravity="center"
                                android:text="Sadia"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fifteen" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llPhotoCount"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/forty"
                            android:layout_below="@+id/llSadia"
                            android:layout_marginLeft="@dimen/ten"
                            android:background="@drawable/bg_rounded_black_transparent"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:padding="@dimen/twelve"
                                android:scaleType="fitEnd"
                                android:src="@drawable/camera_icon_04_05_2021" />

                            <TextView
                                android:id="@+id/tvImageCountProfile"
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="12"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fifteen" />

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/ivProfileImage"
                            android:layout_width="@dimen/fifty"
                            android:layout_height="@dimen/fifty"
                            android:layout_above="@+id/info_layout"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/twenty"
                            android:layout_marginBottom="@dimen/twenty"
                            android:background="@color/transparent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/add_profile_picture_icon_28_02_2021" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/info_layout"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="-30dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:elevation="5dp"
                            android:innerRadius="0dp"
                            android:outlineAmbientShadowColor="@color/gray"
                            android:paddingTop="@dimen/twenty"
                            app:cardCornerRadius="@dimen/forty"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="false">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/ten"
                                android:weightSum="2.4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginLeft="@dimen/five"
                                    android:layout_marginRight="@dimen/ten"
                                    android:layout_weight="0.4"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/text_view_first_name_and_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:gravity="center|left"
                                        android:text="Sadia Hossain"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twenty"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/tvAge"
                                        android:layout_width="@dimen/fifty"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="26"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/text_view_age_gender_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginLeft="@dimen/fifteen"
                                    android:layout_weight="0.2"
                                    android:drawableLeft="@drawable/gps_icon_1_3_2021"
                                    android:drawablePadding="@dimen/five"
                                    android:gravity="left|center"
                                    android:text=" Current location : Bangladesh"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />


                                <TextView
                                    android:id="@+id/moto_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/twenty"
                                    android:layout_marginRight="@dimen/twenty"
                                    android:layout_weight="0.5"
                                    android:background="@drawable/profile_status_strock_bg"
                                    android:drawableRight="@drawable/ic_edit_status_pen_03_08_2021"
                                    android:drawablePadding="@dimen/ten"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/ten"
                                    android:paddingRight="@dimen/ten"
                                    android:text="I'm new here, let's chat!"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />

                                <LinearLayout
                                    android:id="@+id/llInfoGallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.4"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvAboutProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_about_icon_01_08_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="About"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvGalleryProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_gallery_icon_01_08_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Gallery"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvGiftsProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_gifts_icon_26_09_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Gifts"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvStoryProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_story"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Story"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>

                <FrameLayout
                    android:id="@+id/main_frame_frofile_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/hundred_fifty">

                </FrameLayout>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>