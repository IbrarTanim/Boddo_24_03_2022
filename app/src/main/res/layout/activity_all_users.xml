<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <RelativeLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/blankView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/content_bg_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBackActiveAllUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/ten"
                    android:drawableStart="@drawable/back_icon_20_26_12_2020"
                    android:drawablePadding="@dimen/ten"
                    android:gravity="left|center"
                    android:text="Discover"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="?attr/selectableItemBackground" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_margin="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/search_box_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="Search friends &amp; family"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/fifteen" />

                <ImageButton
                    android:id="@+id/bt_clear"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:src="@drawable/ic_search"
                    android:tint="@color/grey_60" />

            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="16"
                android:background="@color/app_bg_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/allUserRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginBottom="@dimen/ten"
                        android:layout_weight="15" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>


        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="194dp"
            android:layout_height="149dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="178dp"
            android:visibility="gone" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>