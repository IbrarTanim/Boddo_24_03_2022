<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ten"
    android:layout_marginRight="@dimen/ten"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:elevation="5dp"
    android:innerRadius="0dp"
    android:outlineAmbientShadowColor="@color/gray"
    app:cardCornerRadius="@dimen/fifteen"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/status_layotu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_upload_imageView"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:gravity="center">

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:gravity="left|center"
                android:maxLines="3"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_image_with_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_layotu"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_giving_love"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_black_love_or_like" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_8_dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/photo_upload_imageView"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/photo_blog_ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/rokan"
                app:riv_corner_radius_top_left="@dimen/fifteen"
                app:riv_corner_radius_top_right="@dimen/fifteen"
                app:riv_oval="false" />


            <LinearLayout
                android:id="@+id/llPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_rounded_black_transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStatusReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/ten"
                    android:text="in review"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#80000000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/paddin_4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/love_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/like_icon_16_26_12_2020"
                        android:drawablePadding="@dimen/five"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/comment_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/comment_icon_16_26_12_2020"
                        android:drawablePadding="@dimen/five"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/user_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/view_icon_16_26_12_2020"
                        android:drawablePadding="@dimen/five"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/blur_effect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/button8"
                android:backgroundTint="#E6FFFFFF"
                android:orientation="vertical"
                android:visibility="gone" />


            <TextView
                android:id="@+id/quetionMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="100sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sender_image_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-20dp">

        <LinearLayout
            android:id="@+id/profile_blur_effect"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/profile_quetionMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>