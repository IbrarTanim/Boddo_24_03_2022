<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sixty"
    android:layout_marginRight="@dimen/sixty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR"
            android:textSize="@dimen/fifteen" />

        <TextView
            android:id="@+id/title"
            style="@style/RegistrationTitleTextViw"
            android:layout_below="@+id/your"
            android:text="@string/select_your_gender" />


        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:orientation="vertical">

           <!-- <RadioButton
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:layout_weight="1"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/male"
                android:textColor="@color/radio_flat_text_selector" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:layout_weight="1"
                android:background="@drawable/radio_flat_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/female"
                android:textColor="@color/radio_flat_text_selector" />-->
            <RadioButton
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layoutDirection="rtl"
                android:buttonTint="#96CC72"
                android:padding="8dp"
                android:checked="true"
                android:text="Male"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layoutDirection="rtl"
                android:buttonTint="#96CC72"
                android:padding="8dp"
                android:text="Female"
                android:textAppearance="?android:textAppearanceMedium" />

        </RadioGroup>


        <Button
            android:id="@+id/next_button"
            style="@style/RegistrationButtonNext"
            android:layout_below="@+id/genderGroup" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>