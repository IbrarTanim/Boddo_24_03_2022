<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5DAA1">

    <RelativeLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="7">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profile_image_container_layoutOthers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/profile_image_view_pagerOthers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/hundrad" />

                        <View
                            android:id="@+id/blankView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:background="@color/transparent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <LinearLayout
                            android:id="@+id/llBck"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/blankView"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/five">

                            <ImageView
                                android:id="@+id/ivBackOthersActivity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingTop="@dimen/ten"
                                android:paddingEnd="@dimen/ten"
                                android:paddingBottom="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_cross_icon_01_08_2021"
                                android:background="?attr/selectableItemBackground"/>

                        </LinearLayout>

                        <com.rd.PageIndicatorView
                            android:id="@+id/image_indicator_others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@id/blankView"
                            app:piv_animationType="drop"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@color/app_color"
                            app:piv_unselectedColor="@color/white"
                            app:piv_viewPager="@id/profile_image_view_pagerOthers"
                            android:layout_marginTop="@dimen/five" />

                        <LinearLayout
                            android:id="@+id/llOthersProfileMenue"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/blankView"
                            android:layout_marginTop="@dimen/five">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/ten"
                                android:scaleType="fitCenter"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_report_menu_01_08_2021" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llName"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/llBck"
                            android:layout_marginStart="@dimen/ten"
                            android:layout_marginTop="@dimen/ten"
                            android:background="@drawable/bg_rounded_black_transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvUserNameProfileOthers"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/twenty_five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginRight="@dimen/twenty_five"
                                android:layout_marginBottom="@dimen/five"
                                android:gravity="center"
                                android:text="Sadia"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fifteen" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@+id/llName"
                            android:id="@+id/genderUser"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/forty"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/ten"
                            android:background="@drawable/bg_rounded_black_transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvUserGenderProfileOthers"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/twenty_five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginRight="@dimen/twenty_five"
                                android:layout_marginBottom="@dimen/five"
                                android:gravity="center"
                                android:text="Male"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fifteen" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/forty"
                            android:layout_below="@+id/genderUser"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginRight="@dimen/ten"
                            android:background="@drawable/bg_rounded_black_transparent"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:padding="@dimen/twelve"
                                android:scaleType="fitEnd"
                                android:src="@drawable/camera_icon_04_05_2021" />

                            <TextView
                                android:id="@+id/tvImageCountProfileOthers"
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="12"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fifteen" />
                        </LinearLayout>

                        <!--Working Area-->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/info_layoutOthers"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="-30dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:elevation="5dp"
                            android:innerRadius="0dp"
                            android:outlineAmbientShadowColor="@color/gray"
                            android:paddingTop="@dimen/twenty"
                            app:cardCornerRadius="@dimen/forty"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="false">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/ten"
                                android:weightSum="2.5">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginLeft="@dimen/five"
                                    android:layout_marginRight="@dimen/ten"
                                    android:layout_weight="0.4"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/text_view_first_name_and_user_nameOthers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:gravity="center|left"
                                        android:text="Sadia Hossain"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twenty"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/tvAgeOthers"
                                        android:layout_width="@dimen/fifty"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="26"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/text_view_age_gender_countryOthers"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginLeft="@dimen/fifteen"
                                    android:layout_weight="0.2"
                                    android:drawableLeft="@drawable/gps_icon_1_3_2021"
                                    android:drawablePadding="@dimen/five"
                                    android:gravity="left|center"
                                    android:text=" Current location : Bangladesh"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen" />


                                <TextView
                                    android:id="@+id/tvOnlineNow"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginLeft="@dimen/fifteen"
                                    android:layout_weight="0.2"
                                    android:drawableLeft="@drawable/ic_online_icon_26_09_2021"
                                    android:drawablePadding="@dimen/five"
                                    android:gravity="left|center"
                                    android:text=" Online now"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />

                                <TextView
                                    android:id="@+id/moto_textViewOthers"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/twenty"
                                    android:layout_marginRight="@dimen/twenty"
                                    android:layout_weight="0.4"
                                    android:background="@drawable/profile_status_strock_bg"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/ten"
                                    android:paddingRight="@dimen/ten"
                                    android:text="I'm new here, let's chat!"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />

                                <LinearLayout
                                    android:id="@+id/llInfoGallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.4"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvAboutOtherProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_about_icon_01_08_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="About"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvGalleryOtherProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_gallery_icon_01_08_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Gallery"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvGiftsOtherProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_gifts_icon_26_09_2021"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Gifts"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                    <TextView
                                        android:id="@+id/tvStoryOtherProfile"
                                        android:layout_width="@dimen/zero"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_rounded_blank"
                                        android:drawableLeft="@drawable/ic_story"
                                        android:gravity="center"
                                        android:paddingLeft="@dimen/fifteen"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Story"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twelve" />

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.3" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlComentLikeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/twenty"
                    android:layout_marginBottom="195dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/randomdeleteCardView"
                        android:layout_width="@dimen/thirty"
                        android:layout_height="@dimen/thirty"
                        android:layout_margin="@dimen/five"
                        android:background="@drawable/background_shep_round_white"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="@dimen/seven">

                        <ImageView
                            android:id="@+id/ivRandomDelete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/ten"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_cross_play_match_01_08_2021" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/comment_buttonCardView"
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/five"
                        android:background="@drawable/background_shep_round_white"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="@dimen/seven">

                        <ImageView
                            android:id="@+id/ivCommentsOtherProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/fifteen"
                            android:src="@drawable/ic_message_icon_01_08_2021" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/like_buttonCardView"
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/fifty"
                        android:layout_marginBottom="@dimen/ten"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="@dimen/seven">

                        <ImageView
                            android:id="@+id/like_button_others"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="@dimen/fifteen"
                            android:src="@drawable/ic_like_icon_01_08_2021" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/main_frame_other_profile_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/hundred_fifty">

                </FrameLayout>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>