<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    tools:context=".Activity.FullNameActivity">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.4" />

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="6"
                android:drawablePadding="@dimen/thirty"
                android:gravity="left|center"
                android:text="Account status"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />


            <ImageView
                android:id="@+id/tvBackAccountClose"
                android:layout_width="@dimen/zero"
                android:layout_height="@dimen/thirty"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/five"
                android:src="@drawable/ic_close_9_6_2021" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/fifteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|left"
                            android:text="Hi"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvUserNameAccountClose"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Sarwar!"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifteen"
                        android:gravity="center|left"
                        android:text="Your account has been disabled!"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="Possible reasons :"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/eighteen"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifteen"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Using fake photos "
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Creating fake profiles"
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Not meeting age requirement(18+)"
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />


                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Sending abusive or annoying message to other users"
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />


                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Using Boddo for commercial solicitation or advertising"
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_gravity="center"
                            android:background="@drawable/gray_bg_circuler"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />


                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:gravity="center|left"
                            android:text="Spamming or abuse to other user on the chat rooms"
                            android:textColor="#727272"
                            android:textSize="@dimen/thirteen"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/five"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:text="You can find a more detailed list of reasons in terms of services. If you think you haven't violated any rules, Please, contact at boddoing@gmail.com."
                    android:textColor="#727272"
                    android:textSize="@dimen/thirteen"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvContactSupport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginRight="@dimen/thirty"
                    android:background="@drawable/button2"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="Contact Support"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvLogoutAccountClose"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginRight="@dimen/thirty"
                    android:layout_marginBottom="@dimen/twenty"
                    android:background="@drawable/button2"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>