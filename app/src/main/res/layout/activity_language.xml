<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_close_9_6_2021"
                android:drawablePadding="@dimen/ten"
                android:gravity="left|center"
                android:text="Language"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="@dimen/ten"/>


        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/five"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/fifteen"
                    android:text="How many languages you speak?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bgColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right|center"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnCancelLanguageActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CANCEL"
                        android:textStyle="bold"
                        android:padding="@dimen/elevation_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/twenty" />

                    <TextView
                        android:id="@+id/btnSaveLanguageActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SAVE"
                        android:layout_marginRight="@dimen/twenty"
                        android:layout_marginLeft="@dimen/twenty"
                        android:textStyle="bold"
                        android:padding="@dimen/elevation_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/twenty" />

                </LinearLayout>

                <Button
                    android:id="@+id/tvSave"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventy"
                    android:layout_margin="@dimen/fifty"
                    android:background="@drawable/button2"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>