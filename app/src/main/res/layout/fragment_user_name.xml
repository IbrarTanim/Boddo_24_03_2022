<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sixty"
    android:layout_marginRight="@dimen/sixty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/next_button"
            style="@style/RegistrationButtonNext"
            android:layout_below="@+id/text_input_layout_user_name" />

        <TextView
            android:id="@+id/your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR"
            android:textSize="@dimen/fifteen" />

        <TextView
            android:id="@+id/title"
            style="@style/RegistrationTitleTextViw"
            android:layout_below="@+id/your"
            android:text="@string/your_username" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_user_name"
            style="@style/RegistrationTextInputLayout"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_userName"
                style="@style/RegistrationEditText"
                android:hint="@string/enter_user_name"
                android:imeOptions="actionUnspecified"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>