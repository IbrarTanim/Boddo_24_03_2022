<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    app:cardCornerRadius="@dimen/twenty"
    app:cardElevation="@dimen/ten"
    app:strokeWidth="@dimen/one">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvUserNameDialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="Sadia"
                android:textColor="@color/gray"
                android:textSize="@dimen/eighteen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/padding_8dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty" />

            <TextView
                android:id="@+id/tvNormalInterfaceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Take an action on this profile. Don't worry this is anonymous."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <!--TODO-->

                <ImageView
                    android:id="@+id/ivAddToFavorite"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />


                <TextView
                    android:id="@+id/tvAddToFavorite"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_weight="9"
                    android:gravity="center|left"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fifteen"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvReportUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_report_icon_22_09_2021"
                android:drawablePadding="@dimen/twenty"
                android:gravity="center|left"
                android:padding="@dimen/ten"
                android:text="Report"
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvBlockUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_blocked_icon_22_09_2021"
                android:drawablePadding="@dimen/twenty"
                android:gravity="center|left"
                android:padding="@dimen/ten"
                android:text="Block"
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirty" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDialogCancel"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
