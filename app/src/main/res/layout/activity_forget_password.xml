<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <ImageView
            android:id="@+id/ivBackResetPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".5"
            android:background="@color/transparent"
            android:padding="@dimen/eighteen"
            android:scaleType="fitStart"
            android:src="@drawable/back_icon_20_26_12_2020" />


        <LinearLayout
            android:id="@+id/llMailField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_marginLeft="@dimen/fifty"
            android:layout_marginRight="@dimen/fifty"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="Recover"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="left|top"
                android:text="your account"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1.5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgetPassET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/paddin_16dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/paddin_16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1" />

            <Button
                android:id="@+id/forgetPassbt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:text="Reset password"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/llInstruction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/fifty"
                android:paddingRight="@dimen/fifty"
                android:text="Please open the link that email within 24 hours access your account and create a new password."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginTop="@dimen/two"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/fifty"
                android:paddingRight="@dimen/fifty"
                android:text="If you don't receive an email in 20 minutes please contact support@boddo.net explaining the sisuation and we will assist you."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>