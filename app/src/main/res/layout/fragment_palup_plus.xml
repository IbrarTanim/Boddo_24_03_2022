<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/content_bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blankView">

        <TextView
            android:id="@+id/tvBackMembership"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/twenty"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/back_icon_20_26_12_2020"
            android:drawablePadding="@dimen/ten"
            android:gravity="left|center"
            android:text="Boddo plus"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layout">

        <LinearLayout
            android:id="@+id/storyRlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/imageSlider"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/zero"
                            android:layout_gravity="center"
                            android:layout_weight="9" />

                        <com.rd.PageIndicatorView
                            android:id="@+id/image_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/zero"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_weight="1"
                            app:piv_animationType="swap"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@color/colorAccent"
                            app:piv_unselectedColor="@color/gray_light_light"
                            app:piv_viewPager="@id/imageSlider" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twenty" />

                    <TextView
                        android:id="@+id/subscription_dialog_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/paddin_16dp"
                        android:textColor="@color/amber_100"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/subscription_layout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <RadioGroup
                            android:id="@+id/subscribe_RbGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/six_month_subscription"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rb_pas"
                                android:button="@color/transparent"
                                android:elevation="8dp"
                                android:gravity="center" />

                            <RadioButton
                                android:id="@+id/three_month_subscription"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rb_pas"
                                android:button="@color/transparent"
                                android:elevation="8dp"
                                android:textColor="@color/gray" />

                            <RadioButton
                                android:id="@+id/one_month_subscription"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/rb_pas"
                                android:button="@color/transparent"
                                android:elevation="8dp" />


                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/firstClassPalupPlusFragment"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <!-- -->

                                <TextView
                                    android:id="@+id/month6_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/post_select_button"
                                    android:gravity="center"
                                    android:text="1ST CLASS"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1.5" />

                                <TextView
                                    android:id="@+id/month_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="5,000 Credits"
                                    android:textColor="@color/gray"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/medal_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Including"
                                    android:textColor="@color/gray"
                                    android:textSize="11sp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.5" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/seven"
                                    android:textColor="@color/gray"
                                    android:text="$70"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/money_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginStart="@dimen/seven"
                                    android:text="6 months"
                                    android:textColor="@color/gray"
                                    android:layout_weight="1.5"
                                    android:textSize="11sp"
                                    android:textStyle="normal" />


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:id="@+id/premiumClassPalupPlusFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:background="#aaa494"
                                        android:gravity="center"
                                        android:textColor="@color/white">

                                        <TextView
                                            android:id="@+id/month2_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="PREMIUM"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/eighteen"
                                            android:textStyle="normal" />


                                    </RelativeLayout>


                                    <View
                                        android:id="@+id/view"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_weight="1.5" />

                                    <TextView
                                        android:id="@+id/month2_textView"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="1500 Credits"
                                        android:textColor="@color/gray"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/medal2_textView"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Including"
                                        android:textColor="@color/gray"
                                        android:textSize="11sp"
                                        android:textStyle="normal" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_weight="0.5" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_weight="1"
                                        android:text="$40"
                                        android:textColor="@color/gray"
                                        android:layout_marginStart="@dimen/seven"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/money2_textView"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/zero"
                                        android:layout_marginStart="@dimen/seven"
                                        android:text="3 months"
                                        android:textColor="@color/gray"
                                        android:layout_weight="1.5"
                                        android:textSize="11sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="35dp"
                                    android:background="@drawable/priemium_select_button"
                                    android:padding="@dimen/five"
                                    android:text="BEST VALUE"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/plusPalupPlusFragment"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/month3_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="2"
                                    android:background="#aaa494"
                                    android:gravity="center"
                                    android:text="PLUS"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1.5" />

                                <TextView
                                    android:id="@+id/month3_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="500 Credits"
                                    android:textColor="@color/gray"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/medal3_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Including"
                                    android:textColor="@color/gray"
                                    android:textSize="11sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="0.5" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:text="$15"
                                    android:textColor="@color/gray"
                                    android:layout_marginStart="@dimen/seven"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/money3_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_marginStart="@dimen/seven"
                                    android:text="1 months"
                                    android:textColor="@color/gray"
                                    android:layout_weight="1.5"
                                    android:textSize="11sp" />


                            </LinearLayout>


                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twenty" />

                    <TextView
                        android:id="@+id/continue_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/fifty"
                        android:layout_marginRight="@dimen/fifty"
                        android:background="@drawable/button_bg_green"
                        android:gravity="center"
                        android:text="Next"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/twenty"
                        app:fontFamily="sans-serif-medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twenty" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/thirty"
                        android:layout_marginRight="@dimen/thirty"
                        android:gravity="left|bottom"
                        android:text="Recurring billing. Cancel anytime"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvLongText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty"
                        android:layout_marginRight="@dimen/thirty"
                        android:gravity="left"
                        android:text="@string/by_tapping_continue"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/twelve"
                        app:fontFamily="sans-serif-medium" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>