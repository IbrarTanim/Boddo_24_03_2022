<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    tools:context=".Activity.EmailVerifiedActivity">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/back_icon_20_26_12_2020"
                android:drawablePadding="@dimen/ten"
                android:gravity="left|center"
                android:text="Edit email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/ten"
                android:background="?attr/selectableItemBackground"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/five"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/fifteen"
                android:text="Your valid email address"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tvClearEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/cancel" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="2"
                    android:backgroundTint="@color/app_bg_color"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:gravity="bottom"
                    android:text="Sarwarhossain@boddo.net"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fifteen"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/counterFullName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textAppearance="?android:textAppearanceSmall" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginLeft="@dimen/fifty"
                android:layout_marginTop="@dimen/fifty"
                android:layout_marginRight="@dimen/fifty"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Please open the link that email within 24 hours to verify your new email address."
                android:textColor="@color/gray"
                android:textSize="@dimen/thirteen" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="5" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>