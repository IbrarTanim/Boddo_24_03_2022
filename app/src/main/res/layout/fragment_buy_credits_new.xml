<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/icon"
                    style="@style/creditImageView" />

                <TextView
                    style="@style/creditTextView"
                    android:layout_toRightOf="@+id/icon"
                    android:text="100 Credits at only $1" />

                <Button
                    android:id="@+id/buy_100pp"
                    style="@style/creditButtonStyle" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon2"
                    style="@style/creditImageView"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />

                <TextView
                    style="@style/creditTextView"
                    android:layout_toRightOf="@+id/icon2"
                    android:text="600 Credits at only $5" />

                <Button
                    android:id="@+id/buy_600pp"
                    style="@style/creditButtonStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon3"
                    style="@style/creditImageView" />

                <TextView
                    style="@style/creditTextView"
                    android:layout_toRightOf="@+id/icon3"
                    android:text="1,400 Credits at only $10" />

                <Button
                    android:id="@+id/buy_1400pp"
                    style="@style/creditButtonStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon4"
                    style="@style/creditImageView" />

                <TextView
                    style="@style/creditTextView"
                    android:layout_toRightOf="@+id/icon4"
                    android:text="3,000 Credits at only $20" />

                <Button
                    android:id="@+id/buy_3000pp"
                    style="@style/creditButtonStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon5"
                    style="@style/creditImageView" />

                <TextView
                    style="@style/creditTextView"
                    android:layout_toRightOf="@+id/icon5"
                    android:text="10,000 Credits at only $50" />

                <Button
                    android:id="@+id/buy_10000pp"
                    style="@style/creditButtonStyle" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
