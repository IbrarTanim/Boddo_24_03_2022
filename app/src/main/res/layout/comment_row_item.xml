<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentor_image_view"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginLeft="@dimen/five"
            android:src="@drawable/rokan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

               <!-- <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirty"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_commentor"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="left|center"
                            android:text="Sarwar"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivMenueComments"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:padding="@dimen/five"
                            android:layout_gravity="right|center"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:src="@drawable/dot_menu_20_26_12_2020" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/text_view_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:layout_marginLeft="10dp"
                        android:scrollbars="vertical"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_view_comment_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/clock_icon_10_26_12_2020"
                        android:drawablePadding="@dimen/five"
                        android:layout_marginTop="@dimen/twenty"
                        android:gravity="center|left"
                        android:text="12.12.2020, 12:36"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_weight="0.2"
                android:background="@color/chatColorBg" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>