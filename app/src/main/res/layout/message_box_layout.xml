<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_message_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/emoji_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5_dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_happy" />

    <EditText
        android:id="@+id/message_box_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/Send_image_view"
        android:layout_toRightOf="@id/emoji_image_view"
        android:background="@drawable/edittextstyle2"
        android:hint="Write something impressive"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/black" />

    <ImageView

        android:id="@+id/Send_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_sent_mail" />

</RelativeLayout>