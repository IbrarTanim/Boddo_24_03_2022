<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp">


    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <ImageView
            android:id="@+id/custom_back_button"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            android:padding="@dimen/fifteen"
            android:layout_marginStart="@dimen/ten"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/back_icon_20_26_12_2020" />


        <com.badoualy.stepperindicator.StepperIndicator
            android:id="@+id/stepper"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_centerInParent="true"
            app:stpi_stepCount="6" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>