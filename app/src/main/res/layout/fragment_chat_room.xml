        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewCountry"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_country_room_08_07_2021" />

                        <TextView
                            android:id="@+id/tvCountryTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/country_user_text"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_friends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFriends"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_friends_room_08_07_2021" />

                        <TextView
                            android:id="@+id/tvFriendsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/friends_user_count"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_love"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewLove"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_love_room_icon_expected" />

                        <TextView
                            android:id="@+id/tvLoveTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/love_user_count"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_date_room_08_07_2021" />

                        <TextView
                            android:id="@+id/tvDateTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/text_view_date_count"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_global"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewGlobal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_global_room_08_07_2021" />

                        <TextView
                            android:id="@+id/tvGlobalTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/global_user_count"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/twenty">

                    <LinearLayout
                        android:id="@+id/layout_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="3"
                            android:padding="@dimen/twelve"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_admin_room_08_07_2021" />

                        <TextView
                            android:id="@+id/tvAdminRoomTitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/ten"
                            android:textStyle="normal" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
