<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    app:cardCornerRadius="@dimen/twenty"
    app:cardElevation="@dimen/ten"
    app:strokeWidth="@dimen/one">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="Action"
                android:textColor="@color/gray"
                android:textSize="@dimen/eighteen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/padding_8dp" />


            <TextView
                android:id="@+id/tvFindoutMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="visible" />


            <!--   <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/five" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You have reached your daily chat request limits. Buy more chat request or activate Boddo Plus."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/padding_8dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:src="@drawable/ic_buy_chat_request_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ten chat request" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 Credits" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/padding_8dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/payjoin"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="Buy ten chat request"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btnDiscoverBoddoPlus"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="Discover Boddo Plus"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/notnow"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
