<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_margin="@dimen/ten"
    app:cardCornerRadius="@dimen/twenty"
    app:cardElevation="@dimen/ten"
    app:strokeWidth="@dimen/one">

    <LinearLayout
        android:id="@+id/layout_country"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/thirty"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvMenueAdmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Admin"
            android:textColor="@color/gray"
            android:textSize="@dimen/fifteen"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvMenueCountryChange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Country change"
            android:textColor="@color/gray"
            android:textSize="@dimen/fifteen"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvChatroomGuideLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Chat room guidelines"
            android:textColor="@color/gray"
            android:textSize="@dimen/fifteen"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1" />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>