<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">


    <!-- <View
         android:id="@+id/blankView"
         android:layout_width="match_parent"
         android:layout_height="@dimen/forty"
         android:background="@color/white"
         app:layout_constraintTop_toBottomOf="@+id/blankView"
         app:layout_constraintBottom_toTopOf="@+id/rlMain" />-->
    <RelativeLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/pvFullImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/llFullScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal">
        </LinearLayout>-->

        <View
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/top_navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundrad"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_below="@+id/top_bar"
            android:padding="@dimen/fifteen">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/five"
                android:scaleType="fitCenter"
                android:src="@drawable/back_icon_20_26_12_2020" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_view"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/ten"
                android:src="@drawable/rokan" />


            <LinearLayout
                android:id="@+id/llFullPhotoUserName"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Farabi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/clock_icon_10_26_12_2020"
                    android:drawablePadding="@dimen/five"
                    android:gravity="center|left"
                    android:text="12.12.2020,12.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ten" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/more_button"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:layout_gravity="center"
                android:background="@drawable/dot_menu_20_26_12_2020"
                android:gravity="center"
                android:onClick="moreButton" />

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/llBlankWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_below="@+id/top_navigation_layout"
            android:background="@color/white"
            android:orientation="horizontal" />-->

        <ImageView
            android:id="@+id/ivFullScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/love_comment_count_layout"
            android:layout_below="@+id/top_navigation_layout"
            android:scaleType="fitCenter"
            android:src="@drawable/rokan" />

        <LinearLayout
            android:id="@+id/love_comment_count_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundrad"
            android:layout_above="@+id/llDescription"
            android:background="@color/white"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="@dimen/three">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/love_count_text_view_photoblog"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/five"
                android:layout_weight="1"
                android:drawableTop="@drawable/like_icon_72_custom"
                android:elevation="@dimen/elevation_5dp"
                android:gravity="center_horizontal"
                android:text="456"
                android:textColor="@color/black"
                android:textSize="@dimen/ten" />

            <TextView
                android:id="@+id/massage_count_text_view"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/five"
                android:layout_weight="1"
                android:drawableTop="@drawable/comment_icon_72_custom"
                android:gravity="center_horizontal"
                android:text="234"
                android:textColor="@color/black"
                android:textSize="@dimen/ten" />

            <TextView
                android:id="@+id/tv_total_view"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/five"
                android:layout_weight="1"
                android:drawableTop="@drawable/view_icon_72_custom"
                android:elevation="@dimen/elevation_5dp"
                android:gravity="center_horizontal"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="@dimen/ten" />

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="5" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:clickable="false"
            android:orientation="vertical"
            android:weightSum="7">

            <ImageView
                android:id="@+id/ivTitleShowHide"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/photo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_marginBottom="@dimen/fifteen"
                android:gravity="center"
                android:maxLines="1"
                android:text="abcd"
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="normal" />

            <!--android:scrollbars="vertical"-->

        </LinearLayout>


        <LinearLayout
            android:id="@+id/image_details_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/recyclerview_bg_overlay"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/five"
            android:paddingRight="@dimen/five"
            android:layout_above="@+id/rlComentLikeButton"
            android:layout_centerInParent="true"
            android:visibility="gone">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_love"
                android:layout_width="@dimen/zero"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="10" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/five"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/ivAllLikes"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                android:padding="@dimen/fifteen"
                android:src="@drawable/arrow_more_like_list_20_03_01_2021" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="178dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlComentLikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/love_comment_count_layout"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/five">


            <!--android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"-->

            <!--<ImageView
                android:id="@+id/like_button"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ten"
                android:layout_toRightOf="@+id/comment_button"
                android:background="@drawable/background_shep_round_white"
                android:elevation="@dimen/hundrad"
                android:padding="@dimen/twenty"
                android:scaleType="fitCenter"
                android:src="@drawable/large_like_custome" />-->

            <androidx.cardview.widget.CardView
                android:id="@+id/like_buttonCardView"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_margin="@dimen/five"
                android:layout_toRightOf="@+id/comment_buttonCardView"
                app:cardCornerRadius="100dp"
                app:cardElevation="@dimen/seven">

                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/twenty_five"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/comment_buttonCardView"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_margin="@dimen/five"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_shep_round_white"
                app:cardCornerRadius="100dp"
                app:cardElevation="@dimen/seven">

                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/twenty_five"
                    android:scaleType="fitCenter"
                    android:src="@drawable/large_comment_custome" />

            </androidx.cardview.widget.CardView>


            <!--<ImageView
                android:id="@+id/comment_button"
                android:layout_width="@dimen/seventy"
                android:layout_height="@dimen/seventy"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_shep_round_white"
                android:elevation="@dimen/hundrad"
                android:padding="@dimen/twenty"
                android:scaleType="fitCenter"
                android:src="@drawable/large_comment_custome" />-->

        </RelativeLayout>


        <ImageView
            android:id="@+id/ivFullImageHandle"
            android:layout_width="@dimen/forty"
            android:layout_height="@dimen/forty"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
