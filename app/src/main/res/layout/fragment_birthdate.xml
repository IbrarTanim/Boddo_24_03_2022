<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sixty"
    android:layout_marginRight="@dimen/sixty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/your"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR"
            android:textSize="@dimen/fifteen" />

        <TextView
            android:id="@+id/title"
            style="@style/RegistrationTitleTextViw"
            android:layout_below="@+id/your"
            android:text="@string/your_date_of_birth" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="@dimen/margin_8_dp"
            android:hint="Born in">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8_dp"
                android:layout_marginEnd="@dimen/margin_8_dp"
                android:drawablePadding="@dimen/paddin_16dp"
                android:focusable="false"
                android:imeOptions="actionUnspecified"
                android:inputType="date"
                android:paddingBottom="@dimen/paddin_16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/join_button"
            style="@style/RegistrationButtonNext"
            android:layout_below="@+id/edit_text_layout"
            android:text="JOIN" />

        <LinearLayout
            android:id="@+id/remember_me_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/join_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thirty"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/more_option_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:textSize="@dimen/fifteen"
                android:gravity="center" />


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>