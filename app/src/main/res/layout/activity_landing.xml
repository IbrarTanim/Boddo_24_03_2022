<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transfeentblack"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_marginTop="@dimen/fifteen"
            android:background="@color/transparent"
            android:padding="@dimen/twenty"
            android:scaleType="fitStart"
            android:src="@drawable/ic_boddo_logo_white_10_08_2021" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Meet, Match"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="center"
                android:text="&amp; Chat"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="center"
                android:text="All over the world"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/ten"
            android:layout_weight="4"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llLogInByFacebook"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/white_button_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/transparent"
                        android:padding="@dimen/five"
                        android:scaleType="fitCenter"
                        android:src="@drawable/facebook_icon" />

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="Continue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLogInByGmail"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_weight="1"
                    android:background="@drawable/white_button_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/transparent"
                        android:padding="@dimen/five"
                        android:scaleType="fitCenter"
                        android:src="@drawable/google_icon" />

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:text="Continue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen"
                        android:textStyle="normal" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:background="@drawable/white_border_transparent_bg"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvContinue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center"
                    android:text="Already have an account?"
                    android:textColor="#E8E8E8"
                    android:textSize="@dimen/fifteen" />


                <TextView
                    android:id="@+id/tvLogIn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Log In"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>