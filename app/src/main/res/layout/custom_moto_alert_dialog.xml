<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    app:cardCornerRadius="@dimen/twenty"
    app:cardElevation="@dimen/ten"
    app:strokeWidth="@dimen/one">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text="Status"
                android:textColor="@color/gray"
                android:textSize="@dimen/eighteen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:padding="@dimen/padding_8dp" />


            <EditText
                android:id="@+id/edit_text_moto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:backgroundTint="@color/gray"
                android:gravity="bottom"
                android:hint="What's on your mind?"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLength="50"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/fifteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/counter_moto"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="50"
                    android:textAppearance="?android:textAppearanceSmall" />

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />


                <!--<ImageView
                    android:id="@+id/save_moto"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/send_icon_20_03_01_2021_normal" />-->


                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/save_moto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/five"
                        android:src="@drawable/send_icon_20_03_01_2021_touch"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/submitButtonTouch"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/five"
                        android:src="@drawable/send_icon_20_03_01_2021_normal" />


                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:fontFamily="sans-serif-medium"
                android:visibility="visible" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnSelectStatus"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:background="@drawable/profile_status_strock_bg"
                android:gravity="center"
                android:text="Select Status"
                android:textColor="@color/gray" />

            <Button
                android:id="@+id/cancel_moto"
                style="@style/Button.Primary.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:background="@drawable/button2"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
