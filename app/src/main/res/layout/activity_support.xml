<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/supporttitle1"
        android:textAppearance="?android:textAppearanceSmall"
        android:textAlignment="center"
        android:id="@+id/title1"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/title1"
        android:text="FAQ"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/faq_button"
        android:background="@drawable/edittextstyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textAlignment="center"
        android:layout_below="@+id/faq_button"
        android:text="@string/supporttitle1"
        android:textColor="@color/black"
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/title2"
        android:id="@+id/support_mess_et"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="Write ue, we would love to help you..."
        android:background="@drawable/edittextstyle"/>
    <Button
        android:layout_below="@+id/support_mess_et"
        android:text="Send"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/faq_send_button"
        android:background="@drawable/edittextstyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/count_textview"
        android:text="10"
        android:layout_below="@id/support_mess_et"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/size_30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
