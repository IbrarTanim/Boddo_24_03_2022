<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddin_16dp"
    tools:context="net.boddo.btm.Fragment.SignupFragment_3">

    <EditText
        android:id="@+id/edit_text_term_and_condition"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/button1"
        android:padding="@dimen/paddin_16dp"
        android:text="@string/terms_and_condition_description" />

    <CheckBox
        android:id="@+id/check_box_term_and_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_term_and_condition"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/paddin_small"
        android:text="Yes I agree with terms and conditions" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_box_term_and_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/button1"
        android:enabled="false"
        android:text="JOIN" />

    <RelativeLayout
        android:id="@+id/google_loading_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="google_loading.json"
            app:lottie_loop="true" />
    </RelativeLayout>
</RelativeLayout>