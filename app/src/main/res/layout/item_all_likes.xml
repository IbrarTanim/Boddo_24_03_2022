<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/five"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAllLikesProfilePic"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five"
            android:layout_weight="2"
            android:src="@drawable/tanim" />

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="10"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAllLikesFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1.5"
                        android:elevation="@dimen/elevation_5dp"
                        android:gravity="left"
                        android:text="Sarwar"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAllLikesName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="2"
                        android:elevation="@dimen/elevation_5dp"
                        android:gravity="left"
                        android:text="Sarwar"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/twelve" />

                    <ImageView
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/zero"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:src="@drawable/ic_red_love_or_like_fill" />

                    <TextView
                        android:id="@+id/tvAllLikesTime"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="2"
                        android:drawableLeft="@drawable/clock_icon_10_26_12_2020"
                        android:drawablePadding="@dimen/five"
                        android:gravity="center|left"
                        android:text="12.12.2020, 12:36"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_weight="0.1"
                android:background="@color/chatColorBg" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>