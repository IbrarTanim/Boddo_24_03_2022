<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_marginTop="@dimen/ten"
    android:layout_marginRight="@dimen/ten">

    <RelativeLayout
        android:id="@+id/like_favorite_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/like_favorite_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/rokan"
            app:riv_corner_radius="@dimen/fifteen"
            app:riv_oval="false" />

        <RelativeLayout
            android:id="@+id/rlUserInfoActivity"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMaleFemale"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/fifty"
                android:layout_gravity="left|center"
                android:padding="@dimen/five"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvUserNameActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ivMaleFemale"
                android:gravity="center|left"
                android:text="Monalisa Khan Chowdhury"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen" />

            <TextView
                android:id="@+id/tvUserAgeActivity"
                android:layout_width="@dimen/forty"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvUserNameActivity"
                android:gravity="center"
                android:text="28"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/blur_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/rectangel_bg"
            android:backgroundTint="#DCFFFFFF"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

        <!--<TextView
            android:id="@+id/quetionMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/qustion"
            android:textColor="@color/colorRed"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="gone" />-->

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>