<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddin_4dp">

    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_option_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/paddin_4dp"
                android:src="@drawable/ic_option_menu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/emoji_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/smile"
                android:visibility="gone" />

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/emojicon_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:hint="Say something..."
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">


                <ImageView
                    android:id="@+id/submit_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/five"
                    android:src="@drawable/send_icon_20_03_01_2021_touch"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/submitButtonTouch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/five"
                    android:src="@drawable/send_icon_20_03_01_2021_normal" />


            </RelativeLayout>


        </LinearLayout>

